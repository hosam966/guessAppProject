<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="خمن مكان او نشاط"
        android:textColor="#E6E1E1"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/images_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/climb"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="18dp"
        android:layout_weight="22"
        app:srcCompat="@drawable/climb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previous_button_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:text="@string/previous"
            android:onClick="onPreviousClick"
            android:background="@android:color/holo_orange_light"/>

        <Button
            android:id="@+id/guess_button_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:text="@string/guess"
            android:onClick="onGuessClick"
            android:background="@android:color/holo_orange_light"/>

        <Button
            android:id="@+id/next_button_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:text="@string/next"
            android:onClick="onNextClick"
            android:background="@android:color/holo_orange_light"/>

    </LinearLayout>



</LinearLayout>